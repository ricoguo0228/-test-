page {
    background: #fff;
}

.bgmain {
    background-color: #ff6444;
    color: #fff;
}

textarea {
    background: #f9f9f9;
    width: 100%;
    padding: 20rpx 0;
    font-size: 28rpx;
}

.add {
    width: 200rpx;
    height: 200rpx;
}

.btn {
    background: #ff6344;
    margin: 100rpx auto;
    padding: 25rpx 0;
}

.btn,.btns {
    display: block;
    color: #fff;
    width: 90%;
    border-radius: 50rpx;
    font-size: 28rpx;
}

.btns {
    margin: 70rpx auto 0;
    padding: 15rpx 0;
}

.preview {
    position: relative;
    width: 230rpx;
}

.close {
    position: absolute;
    right: 30rpx;
    font-size: 40rpx;
}

.input_item {
    margin: 30rpx 0;
    border-bottom: 1rpx solid #f5f5f5;
    padding-bottom: 25rpx;
    font-size: 28rpx;
    align-items: center;
}

.item_name {
    flex-shrink: 0;
}

input {
    width: 100%;
    text-align: right;
    padding-left: 20rpx;
}