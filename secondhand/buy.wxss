.bgmain {
    background-color: #ff6444;
    color: #fff;
}

.img {
    width: 180rpx;
    height: 180rpx;
    border-radius: 20rpx;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.detail_box,.info_box {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
}

.info_box {
    padding-bottom: 50rpx;
}

.info_item {
    display: flex;
    font-size: 30rpx;
    border-bottom: 1rpx solid #f2f2f2;
    padding: 20rpx;
}

.item_title {
    flex-shrink: 0;
}

input {
    width: 100%;
    padding-left: 20rpx;
}

textarea {
    border: 1rpx solid #f2f2f2;
    width: 100%;
    margin-top: 40rpx;
    padding: 20rpx;
    border-radius: 10rpx;
}

.bottom {
    background-color: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    padding: 10rpx 30rpx;
    line-height: 100rpx;
    justify-content: space-between;
}

.sure {
    background-color: #ff6444;
    width: 220rpx;
    color: #fff;
    border-radius: 50rpx;
    margin-top: 10rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    margin-right: 0;
}